<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/library">

    <action
        android:id="@+id/back_to_home"
        app:destination="@id/library"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <fragment
        android:id="@+id/library"
        android:name="it.unitn.disi.lpsmt.g03.library.LibraryFragment"
        android:label="@string/title_library">
        <action
            android:id="@+id/action_libraryFragment_to_series_series"
            app:destination="@id/series_search"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/library" />
    </fragment>

    <fragment
        android:id="@+id/series_search"
        android:name="it.unitn.disi.lpsmt.g03.library.SeriesSearchFragment"
        android:label="@string/title_library_series_search">
        <action
            android:id="@+id/action_add_series_to_chapter"
            app:destination="@id/chapter_form"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/library" />
        <action
            android:id="@+id/action_series_search_to_series_form"
            app:destination="@id/series_form"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/library" />
    </fragment>

    <fragment
        android:id="@+id/chapter_form"
        android:name="it.unitn.disi.lpsmt.g03.library.ChapterFormFragment"
        android:label="@string/title_library_chapter_form" />

    <fragment
        android:id="@+id/series_form"
        android:name="it.unitn.disi.lpsmt.g03.library.SeriesFormFragment"
        android:label="SeriesFormFragment">
        <action
            android:id="@+id/action_series_form_to_chapter_form"
            app:destination="@id/chapter_form"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/library" />
    </fragment>

</navigation>