<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tracker_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_weight="1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/series_cover"
        android:layout_width="@dimen/U_5"
        android:layout_height="@dimen/U_5"
        android:contentDescription="@string/series_img"/>

    <TextView
        android:id="@+id/series_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_gravity="left"
        android:text="@string/missing"/>

    <TextView
        android:id="@+id/ch_counter"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="?colorOnSurfaceVariant"
        android:text="@string/missing"/>

</LinearLayout>