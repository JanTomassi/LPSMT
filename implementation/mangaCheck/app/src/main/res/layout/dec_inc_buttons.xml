<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/U_3"
    android:orientation="horizontal">

    <Button
        android:id="@+id/dec_button"
        android:layout_width="@dimen/U_6"
        android:layout_height="@dimen/U_6"
        android:layout_gravity="start"
        android:layout_marginEnd="@dimen/U_4"
        android:background="@drawable/minus_button"
        android:elevation="@dimen/U_1" />

    <Button
        android:id="@+id/inc_button"
        android:layout_width="@dimen/U_6"
        android:layout_height="@dimen/U_6"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/U_4"
        android:background="@drawable/plus_button"
        android:elevation="@dimen/U_1" />

</LinearLayout>