<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:layout_width="@dimen/card_icon_button"
        android:layout_height="@dimen/card_icon_button"
        android:background="@color/black"/>

    <LinearLayout
        android:background="@drawable/basic_surface"
        android:elevation="4dp"
        android:id="@+id/titolo_descrizione_capitolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/manga_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?colorOnPrimaryContainer"
            android:text="Lorem"
            android:gravity="center"
            android:layout_marginBottom="@dimen/card_elements_margin"
            android:layout_marginTop="@dimen/card_elements_margin"/>

        <TextView
            android:id="@+id/manga_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?colorOnSecondaryContainer"
            android:text="Lorem"
            android:gravity="center"
            android:layout_marginBottom="@dimen/card_elements_margin"/>

        <include layout="@layout/chapter_number_input" />

        <include layout="@layout/dec_inc_buttons"/>
    </LinearLayout>
</FrameLayout>