<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/libraryFragment">
    <fragment
        android:id="@+id/readingListFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.reading_list.ReadingListFragment"
        android:label="@string/reading_list_label">
        <argument
            android:name="mangaID"
            app:argType="integer"
            android:defaultValue="0"/>
        <argument
            android:name="mangaTitle"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="list"
            app:argType="string"
            app:nullable="true"/>
        <argument
            android:name="mangaDescription"
            app:argType="string"
            app:nullable="true"/>
        <action
            android:id="@+id/action_readingListFragment_to_addReadingFragment"
            app:destination="@id/addReadingByNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.library.LibraryFragment"
        android:label="@string/app_name">
        <argument
            android:name="libraryID"
            app:argType="integer" />
        <argument
            android:name="libraryTitle"
            app:argType="string"
            app:nullable="true"/>
        <action
            android:id="@+id/action_libraryFragment_to_addLibraryFragment"
            app:destination="@id/addLibraryFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_listComicFragment"
            app:destination="@+id/listComicFragment" />
    </fragment>
    <fragment
        android:id="@+id/listComicFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.list_comic.ListComicFragment"
        android:label="@string/list_comic_label">
        <argument
            android:name="libraryID"
            app:argType="integer" />
        <action
            android:id="@+id/action_listComicFragment_to_addChapterFragment"
            app:destination="@id/addChapterFragment" />
        <action
            android:id="@+id/action_listComicFragment_to_readerFragment"
            app:destination="@id/readerFragment" />
    </fragment>
    <fragment
        android:id="@+id/addChapterFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.add_chapter.AddChapterFragment"
        android:label="@string/add_chapter_label">
        <argument
            android:name="libraryID"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/addLibraryFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.add_library.AddLibraryFragment"
        android:label="@string/add_library_label">
        <action
            android:id="@+id/action_addLibraryFragment_to_LibraryFragment"
            app:destination="@+id/libraryFragment"/>
    </fragment>
    <fragment
        android:id="@+id/addReadingByNameFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.add_reading.by_name.AddReadingByNameFragment"
        android:label="@string/add_reading_by_name_label">
        <action
            android:id="@+id/action_addReadingByName_to_addReadingSetStatus"
            app:destination="@id/addReadingSetStatusFragment"/>
    </fragment>
    <fragment
        android:id="@+id/addReadingSetStatusFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.add_reading.set_status.AddReadingSetStatusFragment"
        android:label="@string/add_reading_set_status_label">
        <argument
            android:name="mangaID"
            app:argType="integer" />
        <argument
            android:name="mangaTitle"
            app:argType="string" />
        <action
            android:id="@+id/action_addReadingSetStatus_to_readingListFragment"
            app:destination="@id/readingListFragment"/>
    </fragment>
    <fragment
        android:id="@+id/readerFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.reader.ReaderFragment">
        <argument
            android:name="zipPath"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/exportFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.export.ExportFragment"/>
    <fragment
        android:id="@+id/importFragment"
        android:name="it.unitn.disi.lpsmt.g03.mangacheck.import.ImportFragment"/>
</navigation>